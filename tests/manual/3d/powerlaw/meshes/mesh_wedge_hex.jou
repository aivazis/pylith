# ----------------------------------------------------------------------
# Generate geometry
# ----------------------------------------------------------------------
playback 'geometry_wedge.jou'

# ----------------------------------------------------------------------
# Set discretization size
# ----------------------------------------------------------------------
# volume all scheme map
surface 16 scheme pave
${dxMax=2.0*km}
surface 16 size {dxMax}
mesh surface 16

# ----------------------------------------------------------------------
# Generate the mesh
# ----------------------------------------------------------------------
volume 1 scheme sweep source surface 16
mesh volume all

playback 'bc_wedge.jou'

# ----------------------------------------------------------------------
# Export exodus file
# ----------------------------------------------------------------------
export mesh "mesh_wedge_hex.exo" dimension 3 overwrite

